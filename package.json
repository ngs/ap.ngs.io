{
  "name": "activitypub-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:css": "node scripts/build-css.js",
    "build:client": "node scripts/build-client.js",
    "build": "npm run build:css && npm run build:client",
    "dev": "npm run build && wrangler dev",
    "deploy": "npm run build && wrangler deploy",
    "db:init": "wrangler d1 execute activitypub --local --file=./schema.sql",
    "db:init:remote": "wrangler d1 execute activitypub --remote --file=./schema.sql",
    "follow": "node scripts/follow.js",
    "unfollow": "node scripts/follow.js --unfollow",
    "sync": "node scripts/sync.js",
    "new-post": "node scripts/new-post.js",
    "publish": "node scripts/publish.js"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "esbuild": "^0.27.2",
    "sass": "^1.97.2",
    "typescript": "^5.3.3",
    "wrangler": "^3.24.0"
  },
  "dependencies": {
    "hono": "^4.11.4"
  }
}
